<Window x:Class="DeliveryApp.ViewFizLico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeliveryApp"
        mc:Ignorable="d"
        Title="Просмотр физических лиц" Height="450" Width="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" Name="dataFizLico" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код поставщика" Width="*" Binding="{Binding КодПоставщика}"/>
                <DataGridTextColumn Header="Фамилия" Width="2*" Binding="{Binding Фамилия}"/>
                <DataGridTextColumn Header="Имя" Width="2*" Binding="{Binding Имя}"/>
                <DataGridTextColumn Header="Отчество" Width="2*" Binding="{Binding Отчество}"/>
                <DataGridTextColumn Header="Номер свидетельства" Width="2*" Binding="{Binding НомерСвидетельства}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

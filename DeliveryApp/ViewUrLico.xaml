<Window x:Class="DeliveryApp.ViewUrLico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeliveryApp"
        mc:Ignorable="d"
        Title="Просмотр юридических лиц" Height="450" Width="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" Name="dataUrLico" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код поставщика" Width="*" Binding="{Binding КодПоставщика}"/>
                <DataGridTextColumn Header="Название" Width="2*" Binding="{Binding Название}"/>
                <DataGridTextColumn Header="Налоговой номер" Width="2*" Binding="{Binding НалоговыйНомер}"/>
                <DataGridTextColumn Header="Номер свидетельства НДС" Width="2*" Binding="{Binding НомерСвидетельстваНДС}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
